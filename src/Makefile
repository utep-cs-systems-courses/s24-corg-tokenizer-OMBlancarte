
# compiler flags.	-g for debug, -O3 for optimization
CFLAGS = -g -O3

# first target is built by default
all: tokenizer

# $@=target, $^=prerequesites
tokenizer: tokenizer.o uimain.o history.o
	cc -o $@ $^ $(CFLAGS)

# Object file dependencies
tokenizer.o: tokenizer.h
uimain.o: tokenizer.h history.h
history.o: history.h

# delete files generated by compilation
clean:
	rm -f *.o *.c~ tokenizer


run: tokenizer
	./tokenizer
